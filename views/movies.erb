  <link href='http://fonts.googleapis.com/css?family=Donegal+One' rel='stylesheet' type='text/css'>
  <link href="custom.css" rel="stylesheet">
</head>

<body> 

<div class="bs-docs-example">
            <table class="table table-hover">
              <thead>
          
          
                <tr>
                  <th>Ranking</th>
                  <th>Movie</th>
                  <th>Gross USD</th>
                  <th>Year</th>
                </tr>
              </thead>
              <tbody>
                <% @rs.each do |row| %>
                <% years = 2013 - row[3] %>
                <% years = 1 if years == 0 %>
                <% inflation = (0.03 * years) %>
                <% newgross = (row[2] * ( 1 + inflation)).to_i %>
                <% old = row[2] %>

                <tr>
                
                
                
                  <td><%=row[0]%></td>
                  <td><%=row[1]%></td>
                  <td class="old"><%= old %></td>
                  <td class="new"><%= newgross %></td> 
                  <td><%=row[3]%></td>

                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
		 






	
</body>

</html>